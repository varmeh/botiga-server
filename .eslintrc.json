{
	"extends": ["eslint:recommended", "prettier"],
	"env": {
		"node": true,
		"commonjs": true,
		"es6": true,
		"jest": true
	},
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"plugins": ["import", "promise", "jest"],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true,
			"experimentalObjectRestSpread": true
		}
	},
	"overrides": [
		{
			"files": ["*.test.js", "winston.logger.js"],
			"rules": {
				"complexity": 0,
				"max-lines-per-function": 0,
				"max-statements": 0,
				"no-magic-numbers": 0,
				"max-nested-callbacks": 0,
				"import/first": 0,
				"import/order": 0,
				"import/no-namespace": 0
			}
		}
	],
	"noInlineConfig": true,
	"reportUnusedDisableDirectives": true,
	"rules": {
		/* Eslint Rules on top of rules configured in eslint:recommned */
		"no-console": 1,
		"linebreak-style": [2, "unix"],
		"quotes": [2, "single"],
		"semi": 0,
		"space-before-function-paren": "off",
		"no-unused-vars": [
			2,
			{
				"vars": "all",
				"args": "all",
				"varsIgnorePattern": "^_",
				"argsIgnorePattern": "^_"
			}
		],
		"comma-dangle": [2, "never"],
		"comma-spacing": [2, { "before": false, "after": true }],
		"block-scoped-var": 2,
		"complexity": [2, { "max": 9 }],
		"consistent-return": 2,
		"default-case": 2,
		"default-param-last": 2,
		"dot-location": [2, "property"],
		"dot-notation": 2,
		"eqeqeq": 2,
		"max-classes-per-file": [2, 1],
		"no-alert": 2,
		"no-caller": 2,
		"no-constructor-return": 2,
		"no-empty-function": 2,
		"no-eq-null": 2,
		"no-eval": 2,
		"no-extend-native": 2,
		"no-floating-decimal": 2,
		"no-implicit-globals": [2, { "lexicalBindings": true }],
		"no-invalid-this": 2,
		"no-lone-blocks": 2,
		"no-loop-func": 2,
		"no-new-wrappers": 2,
		"no-param-reassign": 2,
		"no-return-assign": 2,
		"no-return-await": 2,
		"no-sequences": 2,
		"no-throw-literal": 2,
		"no-unmodified-loop-condition": 2,
		"no-useless-call": 2,
		"no-useless-concat": 2,
		"prefer-promise-reject-errors": [2, { "allowEmptyReject": true }],
		"vars-on-top": 2,
		"require-await": 2,
		"no-undefined": 2,
		"no-use-before-define": 2,
		"camelcase": [
			2,
			{ "properties": "always", "ignoreImports": true, "allow": ["^UNSAFE_"] }
		],
		"func-names": [2, "as-needed"],
		"id-match": [
			2,
			"^([_]*[a-zA-Z0-9]|[_A-Z])*$",
			{ "properties": true, "ignoreDestructuring": false }
		],
		"max-lines-per-function": [
			2,
			{ "max": 70, "skipBlankLines": true, "skipComments": true, "IIFEs": true }
		],
		"max-nested-callbacks": [2, 3],
		"max-params": [2, 6],
		"max-statements": [2, 20, { "ignoreTopLevelFunctions": true }],
		"max-statements-per-line": [2, { "max": 1 }],
		"new-cap": [2, { "newIsCap": true, "capIsNew": false }],
		"no-array-constructor": 2,
		"no-mixed-operators": 2,
		"no-negated-condition": 2,
		"no-nested-ternary": 2,
		"no-new-object": 2,
		"no-plusplus": 2,
		"no-unneeded-ternary": 2,
		"no-underscore-dangle": 0,
		"sort-keys": 0,
		"no-duplicate-imports": [2, { "includeExports": true }],
		"no-useless-constructor": 2,
		"prefer-rest-params": 2,
		"prefer-spread": 2,
		"arrow-spacing": 2,
		"no-var": 2,
		"prefer-arrow-callback": 2,
		"prefer-const": 2,
		"prefer-destructuring": [
			2,
			{
				"array": true,
				"object": true
			},
			{
				"enforceForRenamedProperties": false
			}
		],
		"prefer-template": 2,
		"sort-imports": [
			2,
			{
				"ignoreCase": false,
				"ignoreDeclarationSort": true,
				"ignoreMemberSort": true,
				"memberSyntaxSortOrder": ["all", "single", "multiple", "none"]
			}
		],
		"lines-between-class-members": 0,

		/* Rules for eslint-plugin-import */
		"import/no-unresolved": 2,
		"import/named": 2,
		"import/default": 2,
		"import/export": 2,
		"import/no-absolute-path": 2,
		"import/no-dynamic-require": 2,
		"import/no-cycle": 2,
		"import/no-relative-parent-imports": 0,
		"import/no-webpack-loader-syntax": 0,
		"import/no-self-import": 2,
		"import/no-useless-path-segments": 2,
		"import/no-named-as-default": 2,
		"import/no-named-as-default-member": 0,
		"import/no-deprecated": 2,
		"import/no-extraneous-dependencies": [
			2,
			{
				"devDependencies": true,
				"optionalDependencies": false,
				"peerDependencies": false,
				"bundledDependencies": true
			}
		],
		"import/no-mutable-exports": 2,
		"import/unambiguous": 0,
		"import/no-commonjs": [2, { "allowRequire": true }],
		"import/no-amd": 2,
		"import/no-nodejs-modules": 0,
		"import/first": 2,
		"import/exports-last": 0,
		"import/no-duplicates": 2,
		"import/no-namespace": 2,
		"import/extensions": [2, { "js": "never", "json": "always" }],
		"import/order": 2,
		"import/newline-after-import": 2,
		"import/prefer-default-export": 0,
		"import/no-unassigned-import": 0,
		"import/no-named-default": 0,

		/* Rules for eslint-plugin-promise */
		"promise/always-return": 2,
		"promise/no-return-wrap": 2,
		"promise/param-names": 2,
		"promise/catch-or-return": 2,
		"promise/no-native": "off",
		"promise/no-nesting": 2,
		"promise/no-promise-in-callback": 2,
		"promise/no-callback-in-promise": 2,
		"promise/avoid-new": 2,
		"promise/no-new-statics": 2,
		"promise/no-return-in-finally": 2,
		"promise/valid-params": 2,

		/* Rules for eslint-plugin-jest */
		"jest/consistent-test-it": [2, { "fn": "test", "withinDescribe": "test" }],
		"jest/expect-expect": [
			2,
			{ "assertFunctionNames": ["expect", "request.*.expect"] }
		],
		"jest/lowercase-name": [
			2,
			{ "ignore": ["describe"], "allowedPrefixes": ["GET"] }
		],
		"jest/no-alias-methods": 2,
		"jest/no-commented-out-tests": 1,
		"jest/no-deprecated-functions": 2,
		"jest/no-disabled-tests": 1,
		"jest/no-duplicate-hooks": 2,
		"jest/no-export": 2,
		"jest/no-focused-tests": 1,
		"jest/no-hooks": [2, { "allow": ["beforeEach", "afterEach"] }],
		"jest/no-identical-title": 2,
		"jest/no-if": 2,
		"jest/no-jasmine-globals": 2,
		"jest/no-jest-import": 2,
		"jest/no-large-snapshots": 2,
		"jest/no-mocks-import": 2,
		"jest/no-standalone-expect": 2,
		"jest/no-test-callback": 0,
		"jest/no-test-prefixes": 2,
		"jest/no-test-return-statement": 2,
		"jest/no-try-expect": 1,
		"jest/prefer-called-with": 1,
		"jest/prefer-hooks-on-top": 2,
		"jest/prefer-spy-on": 1,
		"jest/prefer-strict-equal": 0,
		"jest/prefer-to-be-null": 2,
		"jest/prefer-to-be-undefined": 2,
		"jest/prefer-to-contain": 2,
		"jest/prefer-to-have-length": 2,
		"jest/prefer-todo": 2,
		"jest/require-to-throw-message": 2,
		"jest/require-top-level-describe": 2,
		"jest/valid-describe": 2,
		"jest/valid-expect-in-promise": 1,
		"jest/valid-title": 2
	}
}
